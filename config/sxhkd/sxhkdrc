#
# wm independent hotkeys
#

# terminal emulator
super + Return
	termite --exec tmux

# program launcher
super + r
	j4-dmenu-desktop --no-generic --dmenu="rofi -dmenu -location 7 -fuzzy -font 'Hack 7' -padding 10 -p 'Launch: ' -width 250 -i -lines 5"
super + e
	~/.scripts/rofipass -dmenu -location 7 -fuzzy -font 'Hack 7' -padding 10 -p 'Pass: ' -width 250 -i -lines 5

# file manager
super + backslash
	nemo

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm normally
super + shift + e
	oblogout

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + } {h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus or swap the next/previous desktop
super + {_,shift + } bracket{left,right}
	bspc desktop {-f,-b} {prev,next}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# create/rename desktops on current monitor
super + {_,ctrl} + d
    /home/cpulley/.scripts/bspwm_{name,rename}_desktop

# delete current desktop if empty
super + alt + d
    bspc desktop focused -r

#
# multi-monitor tweaks
#

# focus monitor in given direction
super + {u,i,o}
    bspc monitor -f ^{1,2,3}

super + {shift,alt} + {u,i,o}
    bspc {node,desktop} -m ^{1,2,3}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# resize tiled/floating
#

# expand the tiled space in the given direction
super + alt + {h,j,k,l}
	bspc node {@west -r -100,@south -r +100,@north -r -100,@east -r +100}

# contract the tiled space in the given direction
super + alt + shift + {h,j,k,l}
	bspc node {@east -r -100,@north -r +100,@south -r -100,@west -r +100}

# move a floating window
super + {Left,Down,Up,Right}
	xdo move {-x -20,-y +20,-y -20,-x +20}

#
# media hotkeys
#

XF86AudioPrev + {_,super}
    {playerctl,mpc -q} prev

XF86AudioNext + {_,super}
    {playerctl,mpc -q} next

XF86AudioStop + {_,super}
    {playerctl,mpc -q} stop

XF86AudioPlay + {_,super}
    {playerctl play-pause,mpc -q toggle}

XF86AudioRaiseVolume
    amixer set Master playback 5%+ & amixer set PCM playback 5%+

XF86AudioLowerVolume
    amixer set Master playback 5%- & amixer set PCM playback 5%-

XF86Launch7
    i3lock -c 000000
